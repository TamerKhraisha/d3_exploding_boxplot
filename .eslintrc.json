{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [],
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true
    },
    "sourceType": "module"
  },
  "rules": {
    "no-const-assign": "warn",
    "no-this-before-super": "warn",
    "no-undef": "warn",
    "no-unreachable": "warn",
    "no-unused-vars": "warn",
    "constructor-super": "warn",
    "valid-typeof": "warn",
    "key-spacing": "warn",
    "no-multiple-empty-lines": "warn",
    "semi": "warn",
    "indent": ["warn", 2, {
      "ArrayExpression": "first"
    }],
    "padded-blocks": ["warn", {
      "blocks": "never"
    }],
    "keyword-spacing": "warn",
    "space-in-parens": "warn",
    "camelcase": ["warn", {
      "properties": "never"
    }],
    "comma-spacing": "warn",
    "comma-dangle": ["warn", "only-multiline"],
    "spaced-comment": "warn",
    "space-before-blocks": "warn",
    "space-infix-ops": "warn",
    "object-curly-spacing": "warn",
    "brace-style": "warn",
    "operator-linebreak": "warn",
    "no-trailing-spaces": "warn",

    "space-before-function-paren": ["warn", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "quotes": "off",
    "prefer-const": "off"
  }
}
